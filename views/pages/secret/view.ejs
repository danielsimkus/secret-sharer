<div id="homepage" :class="[heroHeightSet ? '' : 'uninitialized']" v-cloak>
  <div class="">
    <div class="container text-center">
       <h1 id="share-your-secrets" style="margin-top:15px">Share your secrets <small class="text-muted">securely</small></h1 >
    </div>
  </div>
  <div class="container">
    <div id="secret-input" v-cloak>
      <div class="container">
        <div class="secret-form-container">
          <hr>
          <div class="row">
            <div class="col-lg-8 offset-2">
              <ajax-form action="decrypt" :syncing.sync="syncing" :cloud-error.sync="cloudError" :uu-id="uuId" :form-data="{ key: key, uuId: uuId }" :form-errors="formErrors" :form-rules="formRules" @submitted="submittedForm(arguments[0])" v-if="!complete">
                <div class="form-group">
                  <input id="key-input" type="password" class="form-control" placeholder="Enter your access key" :class="[formErrors.key ? 'is-invalid' : '']" v-model.trim="key" focus-first>
                  </input>
                  <input type="hidden" v-model.trim="uuId">
                  <div class="invalid-feedback" v-if="formErrors.key">Invalid Key</div>
                </div>
                <div class="form-group">
                  <ajax-button :syncing="syncing" class="btn-dark btn-lg btn-block"><i class="fa fa-lock"></i>
                     &nbsp;View my secret</ajax-button>
                </div>
              </ajax-form>
              <div class="col-lg-12" v-if="complete">
                <textarea id="secret-input" class="form-control" focus-first readonly>
                </textarea>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <hr>
    <!-- Three columns of text below the carousel -->
    <div class="row align-items-center text-center">
      <div class="col-lg-3 col-sm-12 align-content-center">
        <div class="big-icon-container rounded">
          <!--div style="background-color:#333" class="rounded"-->
          <i class="big-icon fa fa-laptop"></i>
          <!-- /div -->
          <h2>Input</h2>
          <p>Enter the text you wish to share securely (Passwords, SSHKeys, SSL Certs)
          </p>
        </div><!-- /.col-lg-4 -->
      </div>

      <div class="col-lg-3 col-sm-12 align-content-center">
        <div class="big-icon-container rounded">
          <!--div style="background-color:#333" class="rounded"-->
          <i class="big-icon fa fa-lock"></i>
          <!-- /div -->
          <h2>Secured</h2>
          <p>
            Your data will be encoded and stored securely, you will be given a unique URL and Access Key to share
          </p>
        </div><!-- /.col-lg-4 -->
      </div>

      <div class="col-lg-3 col-sm-12 align-content-center">
        <div class="big-icon-container rounded">
          <!--div style="background-color:#333" class="rounded"-->
          <i class="big-icon fa fa-unlock"></i>
          <!-- /div -->
          <h2>Access</h2>
          <p>
            Give a colleague your unique URL and Access key so they can retrieve the data
          </p>

        </div><!-- /.col-lg-4 -->
      </div>

      <div class="col-lg-3 col-sm-12 align-content-center">
        <div class="big-icon-container rounded">
          <!--div style="background-color:#333" class="rounded"-->
          <i class="big-icon fa fa-trash"></i>
          <!-- /div -->
          <h2>Destroyed</h2>
          <p>
            After your data has been accessed the amount of times you specified, it will be destroyed forever
          </p>
        </div><!-- /.col-lg-4 -->
      </div>
    </div>
  </div>
</div>
<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>
